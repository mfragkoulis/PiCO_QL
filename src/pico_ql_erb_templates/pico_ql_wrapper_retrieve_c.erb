  if (((failure = register_table(<%= (@tables.length + views_length).to_s %>, <%= @tables.length.to_s %>, (const char **)queries, (const char **)sqlite_names, port_number)) != SQLITE_DONE) && (failure != SQLITE_OK)) {
<%    end %>
    printf("Register table returns with error code %d.\n", failure);
    re = (void *)(long)failure;
    goto exit;
  }

  exit:
#ifdef PICO_QL_DEBUG
    printf("register_table(): proceeding to deallocate memory and exit.");
#endif
    for (i = 0; i < <%= (@tables.length + views.length).to_s %>; i++) {
      sqlite3_free(queries[i]);
      sqlite3_free(sqlite_names[i]);
    }
    sqlite3_free(queries);
    sqlite3_free(sqlite_names);
#ifdef PICO_QL_DEBUG
    printf("register_table(): deallocated memory; exiting now.");
#endif
    return re;
